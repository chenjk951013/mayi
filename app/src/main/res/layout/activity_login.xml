<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/qb_px_20">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"

        android:src="@mipmap/login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_34"
            android:layout_marginTop="@dimen/qb_px_19"
            android:orientation="horizontal">
            <!--密码登录-->
            <LinearLayout
                android:id="@+id/lay_account"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/qb_px_30"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/account_line"
                    android:layout_width="@dimen/qb_px_3"
                    android:layout_height="@dimen/qb_px_3"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/account_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_5"
                    android:text="密码登录"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/qb_px_12" />
            </LinearLayout>
            <!--账号登录-->
            <LinearLayout
                android:id="@+id/login_msg"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/qb_px_30"
                android:layout_marginLeft="@dimen/qb_px_24"

                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/msg_line"
                    android:layout_width="@dimen/qb_px_3"
                    android:layout_height="@dimen/qb_px_3"
                    android:background="#fff"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/msg_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_5"
                    android:text="验证码登录"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/qb_px_12" />

            </LinearLayout>

        </LinearLayout>
        <!--账号-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_40"
            android:layout_marginLeft="@dimen/qb_px_34"
            android:layout_marginRight="@dimen/qb_px_34"
            android:layout_marginTop="@dimen/qb_px_20"
            android:background="#363A56"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:text="账号"
                android:textColor="#ffffffff"
                android:textSize="@dimen/qb_px_13" />

            <View

                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_marginRight="@dimen/qb_px_20"></View>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#ff77799c"
                android:textSize="@dimen/qb_px_14" />

        </LinearLayout>
        <!--验证码-->
        <LinearLayout
            android:id="@+id/msg_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_40"
            android:layout_marginLeft="@dimen/qb_px_34"
            android:layout_marginRight="@dimen/qb_px_34"
            android:layout_marginTop="@dimen/qb_px_20"
            android:background="#363A56"
            android:orientation="horizontal"
            android:visibility="gone">


            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入您的验证码"

                android:singleLine="true"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#ff77799c"
                android:textSize="@dimen/qb_px_14" />

            <View
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_marginRight="@dimen/qb_px_20"
                android:background="#32276A"></View>

            <TextView
                android:id="@+id/login_isValid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/qb_px_25"
                android:text="发送验证码"
                android:textColor="#fff"
                android:textSize="@dimen/qb_px_13" />
        </LinearLayout>
        <!--密码-->
        <LinearLayout
            android:id="@+id/pwd_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_40"
            android:layout_marginLeft="@dimen/qb_px_34"
            android:layout_marginRight="@dimen/qb_px_34"
            android:layout_marginTop="@dimen/qb_px_20"
            android:background="#363A56"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:text="密码"
                android:textColor="#ffffffff"
                android:textSize="@dimen/qb_px_13" />

            <View
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_marginRight="@dimen/qb_px_20"></View>

            <EditText
                android:id="@+id/loginpwd_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入您的密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#ff77799c"
                android:textSize="@dimen/qb_px_14" />

            <LinearLayout
                android:id="@+id/login_yan"
                android:layout_width="@dimen/qb_px_50"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/login_yan_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/qb_px_14"
                    android:src="@mipmap/login_yan_gone" />
            </LinearLayout>

        </LinearLayout>
        <!-- android:text="忘记密码"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/qb_px_34"
            android:layout_marginTop="@dimen/qb_px_9"
            android:text="忘记密码"
            android:textColor="#77799C"
            android:textSize="@dimen/qb_px_13" />

        <Button
            android:id="@+id/loginCommit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_40"
            android:layout_marginLeft="@dimen/qb_px_33"
            android:layout_marginRight="@dimen/qb_px_33"
            android:layout_marginTop="@dimen/qb_px_23"
            android:background="@mipmap/login_bt"
            android:text="登录"
            android:textColor="#ffc4d3ff" />

        <LinearLayout
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_11"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没有账号？立即"
                android:textColor="#ffffffff"
                android:textSize="@dimen/qb_px_11" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textColor="#0DC2A7"
                android:textSize="@dimen/qb_px_11" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>